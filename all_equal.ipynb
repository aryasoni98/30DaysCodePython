   "source": [
    "# Checks if all elements in a list are equal.\n",
    "\n",
    "    Use [1:] and [:-1] to compare all the values in the given list.\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "metadata": {},
   "outputs": [],
   "source": [
    "def all_equal(lst):\n",
    "  return lst[1:] == lst[:-1]"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "True"
      ]
     },
     "execution_count": 4,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "all_equal([1, 2, 3, 4, 5, 6]) # False\n",
    "all_equal([1, 1, 1, 1]) # True"
   ]
  },
